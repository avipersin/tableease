extends layout

block content
    .main.container
        if (message.length)
            .alert.alert-danger #{message}
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Restaurant Sign Up
                // login form
                form(method='POST' action='/login')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email', placeholder='name@email.com' name='username', value="avipersin@gmail.com")
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password', value="avipersin")
                    div.form-group
                        label(for='remember') Remember Me:
                        input#remember.form-control(type='checkbox' name='remember')
                    button.btn.btn-primary(type='submit') Login


