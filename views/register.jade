extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Restaurant Sign Up

                // register form
                form(method='POST' action='/register/restaurant/post')
                    div.form-group
                        label(for='name') Name:
                        input#name.form-control(type='text', placeholder='name' name='name')
                    div.form-group
                        label(for='address') Address:
                        input#address.form-control(type='text', placeholder='address' name='address')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email', placeholder='name@email.com' name='email')
                    div.form-group
                        label(for='phoneNumber') Phone Number:
                        input#phoneNumber.form-control(type='text', placeholder='000000000' name='phoneNumber')
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password')
                    div.form-group
                        label(for='pw2') Confirm Password:
                        input#pw2.form-control(type='password' name='confirmPassword')
                    button.btn.btn-primary(type='submit') Sign up
