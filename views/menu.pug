extends layout

block content
    div.bgempty
        div.container.h-100
            div.row.h-100.justify-content-center.align-items-center
                div.col-md-6
                    h1 Add Food
                    if (message.length)
                        .alert.alert-success #{message}
                    form(method='POST' action='/menu/post')
                        div.form-group
                            label(for='name') Name:
                            input#name.form-control(type='text', name='name')
                        div.form-group
                            label(for="description") Description:
                            textarea#description(name='description')
                        div.form-group Allergies:
                            each row in allergies
                                div.form-check.form-check-inline
                                    input.form-check-input(type="checkbox", name=row.name, value=row.id)
                                    label.checkbox.inline.form-check-label #{row.name}

                        button.btn.btn-primary(type='submit') Add

    style(type='text/css').
        button {
            clear: both;
            display: block;
        }