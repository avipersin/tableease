extends layout

block content
    div.bgempty
        div.container.h-100
            div.row.h-100.justify-content-center.align-items-center
                div.col-md-6
                    h1 Restaurant Sign Up

                    if (message.length)
                        .alert.alert-danger #{message}

                    form(method='POST' action='/register/restaurant/')
                        div.form-group
                            label(for='name') Name:
                            input#name.form-control(type='text', placeholder='name' name='name')
                        div.form-group
                            label(for='address') Address:
                            input#address.form-control(type='text', placeholder='address' name='address')
                        div.form-group
                            label(for='email') Email:
                            input#email.form-control(type='email', placeholder='name@email.com' name='email')
                        div.form-group
                            label(for='phoneNumber') Phone Number:
                            input#phoneNumber.form-control(type='text', placeholder='000000000' name='phoneNumber')
                        div.form-group
                            label(for='pw') Password:
                            input#pw.form-control(type='password' name='password')
                        div.form-group
                            label(for='pw2') Confirm Password:
                            input#pw2.form-control(type='password' name='confirmPassword')
                        button.btn.btn-primary(type='submit') Sign up
                        a.btn.btn-primary(href="/logout" role="button") Logout

    script(src="/javascripts/places.js@1.6.0")
    script.
        var placesAutocomplete = places({
        container: document.querySelector('#address')});

